<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Lesson Dictionary</title>
<link rel="stylesheet" href="styles.css">
</head>
<body>

<div class="topborder">
    <h1>DICTIONARY</h1>
</div>


<div class="dictionary-container">
    <h2>Terminologies</h2>
    <ul id="termList">
        <!-- Terms injected here. js.-->
    </ul>
</div>


<div class="definition-box" id="definitionBox">
    <h3 id="termTitle">Select a term</h3>
    <p id="termDefinition">Definition appears here...</p>
</div>

<script src="script.js">

const terms = [
    { lesson: 0, term: "HTML", definition: "HyperText Markup Language, used to structure web pages." },
    { lesson: 0, term: "Element", definition: "A single HTML tag with its content and attributes." },
    { lesson: 1, term: "Paragraph", definition: "The <p> tag defines a paragraph in HTML." },
    { lesson: 1, term: "Text Node", definition: "The text content inside an HTML element." },
    { lesson: 2, term: "Div", definition: "A generic container element in HTML." },
    { lesson: 2, term: "Style Attribute", definition: "The inline attribute to apply CSS to an element." }
];

const termList = document.getElementById("termList");
const termTitle = document.getElementById("termTitle");
const termDefinition = document.getElementById("termDefinition");

// Check which lessons are unlocked using localStorage
const unlockedLessons = [true]; // Lesson 1 always unlocked
if(localStorage.getItem("lesson2Completed") === "true") unlockedLessons[1] = true;
if(localStorage.getItem("lesson3Completed") === "true") unlockedLessons[2] = true;

terms.forEach((t, index) => {
    const li = document.createElement("li");
    li.textContent = t.term;

    if (!unlockedLessons[t.lesson]) {
        li.classList.add("locked");
    } else {
        li.addEventListener("click", () => {
            termTitle.textContent = t.term;
            termDefinition.textContent = t.definition;
        });
    }
    termList.appendChild(li);
});


</script>
</body>
</html>
